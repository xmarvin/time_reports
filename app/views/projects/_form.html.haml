- form_for [@project] do |f|
  - unless (f.error_messages.empty?)
    .message.errormsg
      %p
        = f.error_messages
  %p
    = f.label :name
    %br
    = f.text_field :name, :class => :text
  %p
    = f.label :description
    %br
    = f.text_area :description, :class => :wysiwyg
  %p
    = f.submit :class => "submit long"
:javascript
  $("form").submitWithAjax();

