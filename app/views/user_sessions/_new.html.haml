- form_for @user_session,:url => { :action => :create } do |f|
  - unless (f.error_messages.empty?) 
    .message.errormsg
      %p
        = f.error_messages
  %p
    = f.label :email
    = f.text_field :email, :class => 'text small'
  %p
    = f.label :password
    = f.password_field :password, :class => 'text'
  %p
    = f.submit "Login", :class => 'submit'
    &nbsp;
    = f.check_box :remember_me
    = f.label :remember_me, 'Remember me', :id => "rememberme"
